        <value>true</value>
    </property>
    <property>
        <name>hbase.master.port</name>
        <value>16000</value>
    </property>
    <property>
        <name>hbase.master.info.port</name>
        <value>16010</value>
    </property>
    <property>
        <name>hbase.regionserver.port</name>
        <value>16201</value>
    </property>
    <property>
        <name>hbase.regionserver.info.port</name>
        <value>16301</value>
    </property>
